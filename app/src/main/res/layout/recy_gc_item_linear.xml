<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardCornerRadius="7dp"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:padding="5dp"
    android:layout_marginBottom="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    style="?attr/materialCardViewElevatedStyle"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.35"
            android:id="@+id/linearRecyGcGuide"
            android:orientation="vertical"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/linearRecyGcGuide"
            tools:ignore="ContentDescription"
            tools:src="@tools:sample/backgrounds/scenic"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"
            android:layout_marginTop="5dp"
            android:id="@+id/linearRecyGcThumb"
            app:layout_constraintDimensionRatio="1:1.5"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/linearRecyGcGuide"
            app:layout_constraintTop_toTopOf="@id/linearRecyGcThumb"
            android:id="@+id/linearRecyGcTvTitle"
            android:gravity="center"
            android:padding="3dp"
            style="@style/TextAppearance.AppCompat.Medium"
            tools:text="klaihjgfaoiijaoijgaoid"
            />
        <TextView
            android:id="@+id/linearRecyGcTvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            style="@style/TextAppearance.AppCompat.Small.Inverse"
            app:layout_constraintStart_toStartOf="@id/linearRecyGcTvTitle"
            app:layout_constraintTop_toBottomOf="@id/linearRecyGcTvTitle"
            tools:text="19/4/2001" />
       <com.google.android.material.divider.MaterialDivider
           android:layout_width="0dp"
           app:layout_constraintStart_toEndOf="@id/linearRecyGcGuide"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toBottomOf="@id/linearRecyGcTvDate"
           android:layout_margin="3dp"
           android:id="@+id/linearRecyGcDiv"
           android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/linearRecyGcTvRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            app:layout_constraintStart_toStartOf="@+id/linearRecyGcGuide"
            app:layout_constraintTop_toBottomOf="@id/linearRecyGcDiv"
            app:layout_constraintEnd_toStartOf="@id/linearRecyGcTvDuration"
            tools:text="8.9" />

        <TextView
            android:id="@+id/linearRecyGcTvDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            app:layout_constraintStart_toEndOf="@id/linearRecyGcTvRating"
            app:layout_constraintTop_toBottomOf="@id/linearRecyGcDiv"
            app:layout_constraintEnd_toStartOf="@id/linearRecyGcTvViews"
            tools:text="1hr 58min" />
        <TextView
            android:id="@+id/linearRecyGcTvViews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            app:layout_constraintStart_toEndOf="@id/linearRecyGcTvDuration"
            app:layout_constraintTop_toBottomOf="@id/linearRecyGcDiv"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="850 views" />
        <TextView
            android:id="@+id/linearRecyGcTvDesc"
            android:layout_width="0dp"
            android:layout_height="0sp"
            android:padding="5dp"
            app:layout_constraintStart_toEndOf="@id/linearRecyGcGuide"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linearRecyGcTvRating"
            app:layout_constraintBottom_toTopOf="@id/linearRecyGcTvGenres"
            tools:text="@tools:sample/lorem/random" />

        <TextView
            android:id="@+id/linearRecyGcTvGenres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            app:layout_constraintStart_toEndOf="@id/linearRecyGcGuide"
            app:layout_constraintBottom_toBottomOf="@id/linearRecyGcThumb"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="850 views" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>